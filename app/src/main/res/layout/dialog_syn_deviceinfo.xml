<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="@dimen/dp500"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/white_radius_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息更新"
                android:textSize="@dimen/ts17"
                android:textColor="@color/c_515151"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_707070"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统正在同步信息，请稍后..."
                android:textColor="@color/c_515151"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp50"
                android:layout_marginBottom="@dimen/dp80"
                android:textSize="@dimen/ts16"/>
        </LinearLayout>
    </RelativeLayout>
</layout>