<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp80"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:31"
            android:textColor="#686868"
            android:id="@+id/tv_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp13"
            android:textSize="@dimen/ts10"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view_point"
            android:background="@color/c_2495FF"
            android:id="@+id/view_line"
            android:layout_marginTop="@dimen/dp8"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
        <View
            android:layout_width="@dimen/dp8"
            android:layout_height="@dimen/dp8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_line"
            app:layout_constraintBottom_toBottomOf="@+id/view_line"
            android:id="@+id/view_point"
            android:background="@drawable/work_order_progress_point"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts10"
            android:textColor="@color/c_aaaaaa"
            app:layout_constraintTop_toBottomOf="@+id/view_point"
            android:text="2021-05-04"
            android:id="@+id/tv_date"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_686868"
            android:textSize="@dimen/ts12"
            android:text="车站审批员"
            android:lines="1"
            android:id="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:layout_marginTop="@dimen/dp11"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1ABC9C"
            android:textSize="11sp"
            android:text="【申请通过】"
            android:layout_marginTop="@dimen/dp4"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>