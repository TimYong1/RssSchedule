<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.sx.trackdispatch.viewmodel.ChatUserViewModel" />
        <variable
            name="userAdapter"
            type="com.sx.trackdispatch.adapter.ChatUserAdapter" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/dp132"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp17"
                    android:layout_height="@dimen/dp17"
                    android:src="@mipmap/message_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ts16"
                    android:textColor="@color/c_2495FF"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp7"
                    android:text="@string/contacts"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp30"
                app:layoutManager="com.kunminx.binding_recyclerview.layout_manager.WrapContentLinearLayoutManager"
                tools:listitem="@layout/item_chat_user"
                adapter="@{userAdapter}"
                notifyCurrentListChanged="@{vm.notifyCurrentListChanged}"
                submitList="@{vm.list}"
                android:layout_marginTop="@dimen/dp18"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:src="@mipmap/user_chat_default"
                android:layout_marginTop="@dimen/dp62"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Astrators"
                android:textColor="@color/c_515151"
                android:textSize="@dimen/ts20"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp16"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textSize="@dimen/dp20"
                            android:textColor="@color/c_24B8FE"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次"
                            android:textSize="@dimen/ts10"
                            android:textColor="@color/c_24B8FE"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historical_call"
                        android:textColor="@color/c_d7d7d7"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp132">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textSize="@dimen/dp20"
                            android:textColor="@color/c_24B8FE"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="条"
                            android:textSize="@dimen/ts10"
                            android:textColor="@color/c_24B8FE"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historical_msg"
                        android:textColor="@color/c_d7d7d7"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp47">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工号    "
                        android:textColor="@color/c_aaaaaa"
                        android:textSize="@dimen/ts14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="61159"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp14"
                        android:textColor="@color/c_515151"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车站    "
                        android:textColor="@color/c_aaaaaa"
                        android:textSize="@dimen/ts14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这是所在车站名称"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp14"
                        android:textColor="@color/c_515151"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp28">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗位    "
                        android:textColor="@color/c_aaaaaa"
                        android:textSize="@dimen/ts14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="61159"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp14"
                        android:textColor="@color/c_515151"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp28">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上级领导"
                        android:textColor="@color/c_aaaaaa"
                        android:textSize="@dimen/ts14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这是上级领导"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp14"
                        android:textColor="@color/c_515151"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作年限"
                        android:textColor="@color/c_aaaaaa"
                        android:textSize="@dimen/ts14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-05-06至今"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp14"
                        android:textColor="@color/c_515151"
                        android:textSize="@dimen/ts14"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp80">
                <TextView
                    android:layout_width="@dimen/dp126"
                    android:layout_height="@dimen/dp36"
                    android:textColor="@color/white"
                    android:background="@drawable/transparent_msg_send_btn"
                    android:text="发消息"
                    android:gravity="center"
                    android:textSize="@dimen/ts14"/>

                <TextView
                    android:layout_width="@dimen/dp126"
                    android:layout_height="@dimen/dp36"
                    android:textColor="@color/white"
                    android:background="@drawable/call_phone_btn"
                    android:text="打电话"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp32"
                    android:textSize="@dimen/ts14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>