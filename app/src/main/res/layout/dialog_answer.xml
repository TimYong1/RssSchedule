<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp120"
            android:src="@mipmap/user_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:text="王慈志（车长）"
            android:textColor="@color/white"
            android:textSize="@dimen/ts24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="正在接通..."
            android:textColor="@color/c_90ffffff"
            android:textSize="@dimen/ts20"
            android:id="@+id/tv_state"/>

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textColor="@color/c_90ffffff"
            android:textSize="@dimen/ts20"
            android:id="@+id/chronometer"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="@dimen/dp356"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp172"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_hung_up"
                android:layout_width="@dimen/dp154"
                android:layout_height="@dimen/dp44"
                android:text="挂  断"
                android:background="@drawable/hung_up_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/ts20"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="@dimen/dp154"
                android:layout_height="@dimen/dp44"
                android:layout_marginLeft="@dimen/dp48"
                android:text="接  听"
                android:background="@drawable/answer_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/ts20"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</layout>