<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.sx.trackdispatch.viewmodel.LoginViewModel" />
        <variable
            name="click"
            type="com.sx.trackdispatch.view.LoginActivity.ClickProxy" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A81FE">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="48dp">
            <ImageView
                android:layout_width="81dp"
                android:layout_height="46dp"
                android:background="@mipmap/login_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轨行区调度系统"
                android:textColor="#ffffffff"
                android:textSize="31sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/dp44"
                    android:layout_height="@dimen/dp44"
                    android:src="@mipmap/ic_userid"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/ts20"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:text="testadmin"
                    android:hint="请输入司机账号"
                    android:textColorHint="#6889fb"
                    android:paddingLeft="@dimen/dp12"
                    android:id="@+id/ed_user_id"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp6"
                android:background="#6DA0FF"/>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp32">
                <ImageView
                    android:layout_width="@dimen/dp44"
                    android:layout_height="@dimen/dp44"
                    android:src="@mipmap/ic_password"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/ts20"
                    android:hint="请输入密码"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:text="123456"
                    android:inputType="textPassword"
                    android:textColorHint="#6889fb"
                    android:paddingLeft="@dimen/dp12"
                    android:id="@+id/ed_password"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp6"
                android:background="#6DA0FF"/>
            <TextView
                android:layout_width="@dimen/dp324"
                android:layout_height="@dimen/dp62"
                android:text="登   录"
                android:layout_marginTop="@dimen/dp80"
                android:gravity="center"
                android:background="@drawable/shaper_login_btn"
                android:textColor="@color/white"
                android:onClick="@{()->click.login()}"
                android:textSize="@dimen/ts22"/>

        </LinearLayout>
    </RelativeLayout>
</layout>